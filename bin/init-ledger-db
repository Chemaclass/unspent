#!/usr/bin/env php
<?php

declare(strict_types=1);

/**
 * Initialize the ledger database.
 *
 * Usage:
 *   bin/init-ledger-db [--path=<path>] [--ledger-id=<id>] [--force]
 *
 * Run with --help for all options.
 */

// Find autoloader
$autoloadPaths = [
    __DIR__ . '/../vendor/autoload.php',
    __DIR__ . '/../../autoload.php',
];

$autoloadFound = false;
foreach ($autoloadPaths as $autoloadPath) {
    if (file_exists($autoloadPath)) {
        require $autoloadPath;
        $autoloadFound = true;
        break;
    }
}

if (!$autoloadFound) {
    fwrite(STDERR, "Error: Could not find autoloader. Run 'composer install' first.\n");
    exit(1);
}

use Chemaclass\Unspent\Console\InitLedgerDbCommand;
use Symfony\Component\Console\Application;

$application = new Application('unspent', '1.0.0');
$application->addCommand(new InitLedgerDbCommand());
$application->setDefaultCommand('ledger:init', true);
$application->run();
