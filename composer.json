{
    "name": "chemaclass/unspent",
    "description": "A PHP library for UTXO-like bookkeeping using unspent entries.",
    "type": "library",
    "homepage": "https://github.com/Chemaclass/unspent",
    "license": "MIT",
    "authors": [
        {
            "name": "Jose M. Valera Reales",
            "email": "hi@chemaclass.es",
            "homepage": "https://chemaclass.com"
        }
    ],
    "require": {
        "php": ">=8.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.92",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.5",
        "rector/rector": "^2.3",
        "symfony/var-dumper": "^8.0"
    },
    "minimum-stability": "stable",
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Chemaclass\\Unspent\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Chemaclass\\UnspentTests\\": "tests/"
        }
    },
    "scripts": {
        "phpunit": "vendor/bin/phpunit",
        "stan": "vendor/bin/phpstan analyse --memory-limit=512M",
        "csfix": "vendor/bin/php-cs-fixer fix",
        "csrun": "vendor/bin/php-cs-fixer fix --dry-run --diff",
        "rector": "vendor/bin/rector",
        "rector-dry": "vendor/bin/rector --dry-run",
        "test": [
            "@csrun",
            "@stan",
            "@phpunit"
        ]
    }
}
