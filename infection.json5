{
    "$schema": "https://raw.githubusercontent.com/infection/infection/0.29.0/resources/schema.json",
    "source": {
        "directories": ["src"],
        "excludes": [
            "Console",
            "Logging",
            "Persistence",
            "Event",
            "Selection/ExactMatchStrategy.php"
        ]
    },
    "logs": {
        "text": "infection.log",
        "stryker": {
            "badge": "/^main$/"
        }
    },
    "mutators": {
        "@default": true,
        // Visibility mutations are false positives - not functional changes
        "PublicVisibility": false,
        "ProtectedVisibility": false,
        // String concat in ID generators is cosmetic
        "Concat": {
            "ignore": [
                "Chemaclass\\Unspent\\IdGenerator::*"
            ]
        },
        "ConcatOperandRemoval": {
            "ignore": [
                "Chemaclass\\Unspent\\IdGenerator::*"
            ]
        },
        // Spread mutations often produce equivalent code
        "SpreadOneItem": {
            "ignore": [
                "Chemaclass\\Unspent\\TxBuilder::*",
                "Chemaclass\\Unspent\\UnspentSet::*"
            ]
        },
        "SpreadRemoval": {
            "ignore": [
                "Chemaclass\\Unspent\\TxBuilder::*",
                "Chemaclass\\Unspent\\UnspentSet::*"
            ]
        },
        // Return removal on early returns is often equivalent
        "ReturnRemoval": {
            "ignore": [
                "Chemaclass\\Unspent\\UnspentSet::addAll",
                "Chemaclass\\Unspent\\UnspentSet::removeAll"
            ]
        },
        // Break removal in loops often produces equivalent behavior (just slower)
        "Break_": {
            "ignore": [
                "Chemaclass\\Unspent\\Ledger::transfer",
                "Chemaclass\\Unspent\\Ledger::debit",
                "Chemaclass\\Unspent\\Ledger::consolidate",
                "Chemaclass\\Unspent\\Ledger::batchTransfer"
            ]
        },
        // UnwrapArrayValues often produces equivalent code
        "UnwrapArrayValues": false,
        // Assignment mutations in accumulator patterns are often equivalent
        "Assignment": {
            "ignore": [
                "Chemaclass\\Unspent\\Ledger::transfer",
                "Chemaclass\\Unspent\\Ledger::debit",
                "Chemaclass\\Unspent\\Ledger::consolidate",
                "Chemaclass\\Unspent\\Ledger::batchTransfer"
            ]
        }
    },
    "minMsi": 90,
    "minCoveredMsi": 90,
    "testFramework": "phpunit",
    "testFrameworkOptions": "--no-coverage",
    "tmpDir": ".infection-cache"
}
